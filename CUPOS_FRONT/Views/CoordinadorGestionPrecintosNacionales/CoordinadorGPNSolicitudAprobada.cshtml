@model Web.Models.CoordinadorSolicitudAprobada;

@{
    ViewData["Title"] = "Solicitudes aprobadas";
}

<div>
    <a asp-controller="Home" asp-action="Index">Inicio </a>  >  <a asp-controller="CoordinadorGestionPrecintosNacionales" asp-action="Index">Gestionar Precintos Nacionales y marquillas</a> > <strong> Solicitud radicada</strong>
</div>
<partial name="Partials/_SeccionBotonesAyuda"></partial>

<div class="container mt-5 mb-5">
    <ul class="nav nav-tabs">
        <li class="nav-item">
            <a class="nav-link active"
               data-bs-toggle="tab"
               href="#tab1"
               id="tab-1">Solicitud</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-bs-toggle="tab" href="#tab2" id="tab-2">Cartas</a>
        </li>
    </ul>
</div>
<div class="tab-content">
    <div class="tab-pane container active p-2" id="tab1">
        <!-- #region formulario -->
        <partial name="Partials/_PartialInfoSolicitud" model="@Model.InfoSolicitud"></partial>
        <!-- #endregion -->
    </div>
    <div class="tab-pane container fade p-2" id="tab2">
        <div class="col-12" style="height: 700px;">
            <iframe title="@Model.ArchivoAprobacionAnalista.nombreAdjunto" width="100%" height="100%" src="@Model.ArchivoAprobacionAnalista.adjuntoBase64"></iframe>
        </div>
    </div>
</div>

<div class="mt-3 row justify-content-center">

    <div class="col-2">
        <a class="btn btn-primary w-100" asp-action="Index" asp-controller="CoordinadorGestionPrecintosNacionales">Regresar</a>
    </div>
</div>


@section Scripts{



<script src="~/js/CoordinadorGestionPrecintosNacionales/CoordinadorGPNGeneric.js" asp-append-version="true"></script>

}