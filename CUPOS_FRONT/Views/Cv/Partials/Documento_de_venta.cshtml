<div class="container">
    <div class="container">
        <div class="mt-3">
            <div class="mt-2 mb-2">
                <table id="Tabledocumento" class="table w-100">
                    <caption class="d-none">Table Description</caption>
                    <thead>
                        <tr>
                            <th></th>
                            <th>Numeracion</th>
                            <th>Numero de documento de venta</th>
                            <th>Quien vende (N Documento)</th>
                            <th>Quien vende (Nombre/Razon Social)</th>
                            <th>Quien compra (N Documento)</th>
                            <th>Quien compra (Nombre/Razon Social)</th>
